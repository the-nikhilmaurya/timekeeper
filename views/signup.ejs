<%- include('./includes/header') -%>

  <body>
    
    <div class="container d-flex justify-content-center">
        <div class="card mt-5" style="width: 22rem;">
            <div class="card-body">
              <h5 class="card-title d-flex justify-content-center">TimeKipper</h5>
                <span class="text-danger mb-0"><%= locals.err %>  </span>
              <form action="/users/" method="post" >

                <div class="mb-4 mt-5 d-flex justify-content-md-start">
                  <label class="ps-2"  for="fname" ><b> FirstName:</b></label>
                  <input id="" name='fname' class="input input-sm ms-3 me-2 rounded-2" style="width:100%" type="text" value='' >
                </div>

                <div class="mb-4  d-flex justify-content-md-start">
                    <label class="ps-2"  for="lname" ><b> LastName:</b></label>
                    <input id="" name='lname' class="input input-sm ms-3 me-2 rounded-2" style="width:100%" type="text" value='' >
                  </div>
    
                
                <div class="mb-4 d-flex justify-content-md-start">
                  <label class="ps-2"  for="email"><b>Email&nbsp;&nbsp;ID:&nbsp;</b></label>
                  <input id="" name='email' class=" input input-sm ms-3 me-2 rounded-2" style="width:100%" type="text" value=''>
                </div>
      
                  
                <div class="mb-4 d-flex justify-content-md-start">
                  <label class="me-3 ps-2"  for="password"><b>Password:</b></label>
                  <input id="password" name='password' class=" input input-sm ms-0 me-2 rounded-2" style="width:100%" type="text" value=''>
                </div>
      
    
                
                <div class="mb-4 d-flex justify-content-center">
                  <button  id="" type="submit" class="btn btn-dark ps-5 pe-5">Sign Up</button>
                </div>
              </form>
              <p class="d-flex justify-content-center">Already have an account?  <a href="/login">Log In</a></p>
            </div>
          </div>
    </div>
    <%- include('./includes/footer') -%>
